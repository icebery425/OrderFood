/* pages/order/list.wxss */
.tcontainer {
  min-height: 100%;
  width: 100%;
  position: absolute;
  background-color: white;
}

.sku-item{
  height:auto;
  background-color: white;
}

.order-item-on{
  display: flex;
  flex-direction: column;
  height: auto;
  position:relative;
  background-color: white;
  margin-bottom: 10rpx; 
  margin-top: 10rpx;
}


.item-bottom{
  margin-top: 35rpx;
  font-size: 32rpx;
}

.item-desc-top{
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.sku-item-on{
  display: flex;
  flex-direction:row;
  height: 185rpx;
  position:relative;
  background-color: #f1f1f1;
  margin-bottom: 10rpx; 
}

.order-bottom-style{
  display: flex;
  flex-direction:row;
  margin-left: 30rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.oper-item-style{
  display: flex;
  flex-direction:row;
  margin-top: 15rpx;
}

.operation-style-dark{
  width:160rpx;
  height:60rpx;
  color:#010101;
  background-color:#f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.operation-style-green{
  width:160rpx;
  height:60rpx;
  color:#fff;
  background-color:#1aad19;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.devide-line{
  background-color:#e5e5e5;
  height:1rpx;
  margin-top: 20rpx;
}

.sku-avatar{
  height: 156rpx;
  width: 156rpx;
  margin-left: 30rpx;
  margin-top: 15rpx;
}

.item-sku-info{
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}

.hc-title{
  font-size: 28rpx;
  height: 40rpx;
  color: black;
  font-style:initial;
  margin-left: 20rpx;
}

.item-name{
  font-size: 30rpx;
  height: 40rpx;
  color: black;
  font-style:initial;
  margin-top: 6rpx;
}

.item-desc{
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #888;
}

