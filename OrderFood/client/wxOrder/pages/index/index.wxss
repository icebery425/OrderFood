/**index.wxss**/
.tcontainer {
  display: flex;
  height: 100%;
  flex-direction: column;
  background-color: white;
}


.top-title{
  display: flex;
  height: 55rpx;
  flex-direction:row;
  color: #353535;
  font-size: 32rpx;
  align-items: center;
}

.title-hint-style{
  margin-left: 10rpx;
  color: #353535;
  font-size: 28rpx;
}

.title-text-style{
  display: flex;
  position: absolute;
  right: 30rpx;
  width:80rpx;
  color: #353535;
  font-size: 28rpx;
  justify-content:center;
  align-items:center;
}

.top-container {
  height: auto;
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  color:#353535;
  box-sizing: border-box;
}

.select-item{
  height:auto;
  margin-left: 30rpx;
  margin-right: 30rpx;
  flex-direction: row;
  background: white;
  margin-top: 30rpx;
}

.swiper-image{
  width: 100%;
  height: 400rpx;
}

.devide-line{
  background-color:#e5e5e5;
  height:1rpx;
  width: 100%;
}

.content-container{
  display: flex;
  flex-direction:row;
  height: 110rpx; 
  align-items: center;
  margin-top: 10dp;

}

.title-bg{
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  color: #353535;
  font-size: 32rpx;
  margin-left: 30rpx;
}

.hc-image-container{
  display: flex;
  position: absolute;
  right: 60rpx;
  height: 96rpx;
  width:30rpx;
  justify-content:center;
  align-items:center;
}

.down-select{
  display: flex;
  width: 45rpx;
  height: 45rpx;
  align-items: left;
}

.icon-image{
  height: 44rpx;
  width: 44rpx; 
  margin-left: 30rpx;
  align-items:center;
}


.commit-bottom{
  margin-top: 120rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.commit-btn{
  width:100%;
  height:88rpx;
  color:#fff;
  background-color:#15b4f0;
  margin-top:15px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.bottom-hint{
  position:fixed;
  bottom:20rpx;
  width: 100%;
  font-size: 26rpx;
  align-items: center;
  justify-content: center;
  text-align:center;
  color: #353535;
}

.bottom-text{
  width: auto;
}